<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude test classes -->
    <Match>
        <Class name="~.*Test.*" />
    </Match>

    <!-- Exclude generated classes -->
    <Match>
        <Class name="~.*\..*_.+.*" />
    </Match>

    <!-- Exclude Lombok generated code -->
    <Match>
        <Class name="~.*\$.*" />
    </Match>

    <!-- Exclude Spring Boot auto-configuration classes -->
    <Match>
        <Class name="~.*AutoConfiguration.*" />
    </Match>

    <!-- Exclude known false positives -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP" />
        <Class name="~.*DTO.*" />
    </Match>

    <Match>
        <Bug pattern="EI_EXPOSE_REP2" />
        <Class name="~.*DTO.*" />
    </Match>

    <!-- Exclude Spring service injection warnings (expected pattern) -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2" />
        <Class name="com.evcs.auth.security.RbacPermissionEvaluator" />
    </Match>

    <!-- Exclude Spring dependency injection patterns -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2" />
        <Class name="~.*Service.*" />
    </Match>

    <Match>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2" />
        <Class name="~.*Controller.*" />
    </Match>

    <Match>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2" />
        <Class name="~.*Config.*" />
    </Match>

    <Match>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2" />
        <Class name="~.*DTO.*" />
    </Match>

    <Match>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2" />
        <Class name="~.*Dto.*" />
    </Match>

    <Match>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2" />
        <Class name="~.*Statement.*" />
    </Match>

    <Match>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2" />
        <Class name="~.*Request.*" />
    </Match>

    <!-- Exclude dead store warnings (common in exception handling) -->
    <Match>
        <Bug pattern="DLS_DEAD_LOCAL_STORE" />
    </Match>

    <!-- Exclude default encoding warnings (common in quick implementations) -->
    <Match>
        <Bug pattern="DM_DEFAULT_ENCODING" />
    </Match>

    <!-- Exclude null check warnings after dereference (common in validation) -->
    <Match>
        <Bug pattern="RCN_REDUNDANT_NULLCHECK_WOULD_HAVE_BEEN_A_NPE" />
    </Match>

    <!-- Exclude uninitialized field warnings (common in Spring/Metrics initialization) -->
    <Match>
        <Bug pattern="UR" />
        <Class name="~.*Metrics.*" />
    </Match>

    <!-- Exclude unread field warnings (common for configuration fields) -->
    <Match>
        <Bug pattern="UWF_UNWRITTEN_FIELD" />
        <Class name="~.*SessionManager.*" />
    </Match>

    <!-- Exclude naming convention warnings -->
    <Match>
        <Bug pattern="Nm" />
        <Class name="~.*Exception.*" />
    </Match>

    <!-- Exclude all Metrics-related warnings -->
    <Match>
        <Bug pattern="UR,EI,EI2" />
        <Class name="~.*Metrics.*" />
    </Match>
</FindBugsFilter>